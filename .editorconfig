# EditorConfig for CodeSight Project
# Generated: 2025-01-27

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript, TypeScript, and React files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
max_line_length = off

# Rust files
[*.{rs,toml}]
indent_style = space
indent_size = 4
max_line_length = 100

# Configuration files
[*.{config,env,gitignore,eslintignore,prettierignore}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_style = space
indent_size = 2

# SQL files
[*.{sql}]
indent_style = space
indent_size = 2

# Docker files
[*{Dockerfile,docker-compose*.yml}]
indent_style = space
indent_size = 2

# CSS, SCSS, and similar style files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2