# Unified Prettier Configuration for CodeSight Project
# Generated: 2025-01-27

# Basic formatting
printWidth: 100
tabWidth: 2
useTabs: false
semi: true
singleQuote: true
quoteProps: 'as-needed'
trailingComma: 'es5'
bracketSpacing: true
bracketSameLine: false
arrowParens: 'avoid'

# Spacing and line breaks
endOfLine: 'lf'
proseWrap: 'preserve'
htmlWhitespaceSensitivity: 'css'

# JSX formatting
jsxSingleQuote: false
jsxBracketSameLine: false

# Other options
embeddedLanguageFormatting: 'auto'