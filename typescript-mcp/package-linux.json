{
  "name": "codesight-mcp",
  "version": "0.1.0",
  "type": "module",
  "description": "CodeSight MCP Server - Working MCP Server implementation with real SQLite code indexing, natural language search, and Claude Desktop integration (Linux/Docker)",
  "main": "dist/minimal-index.js",
  "types": "dist/minimal-index.d.ts",
  "bin": {
    "codesight": "dist/minimal-index.js",
    "codesight-mcp": "dist/minimal-index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:full": "tsc && cd ../rust-core && cargo build --release",
    "build:debug": "tsc && napi build --platform",
    "build:native": "node scripts/build-native.js",
    "build:native:debug": "node scripts/build-native.js --debug",
    "build:native:skip-tests": "node scripts/build-native.js --skip-tests",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "health-check": "node dist/health-check-cli.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:contract": "vitest tests/contract",
    "test:watch": "vitest --watch",
    "test:unit": "vitest",
    "test:integration": "vitest tests/contract",
    "test:e2e": "vitest",
    "test:performance": "vitest",
    "test:security": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "clean:native": "rimraf codesight-native.node build-info.json",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "codesight",
    "mcp",
    "model-context-protocol",
    "ai",
    "assistant",
    "code-analysis",
    "search",
    "parsing"
  ],
  "author": "CodeSight Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/codesight-mcp.git"
  },
  "homepage": "https://codesight-mcp.com",
  "bugs": {
    "url": "https://github.com/your-org/codesight-mcp/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^8.3.1",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/instrumentation-express": "^0.55.0",
    "@opentelemetry/instrumentation-http": "^0.206.0",
    "@opentelemetry/instrumentation-pino": "^0.53.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/typescript-estree": "^6.15.0",
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.2",
    "better-sqlite3": "^12.4.1",
    "bullmq": "^4.15.4",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-levenshtein": "^3.0.0",
    "fastify": "^4.24.3",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "natural": "^6.12.0",
    "ora": "^7.0.1",
    "prom-client": "^15.1.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "vitest": "^1.0.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/natural": "^5.1.5",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.52.2",
    "@rollup/rollup-linux-x64-musl": "^4.52.2"
  },
  "overrides": {
    "@rollup/rollup-win32-x64-msvc": "npm:@rollup/rollup-linux-x64-gnu@^4.52.2"
  }
}